#!/bin/sh

# remove ada0, reinstall on ada0
# add ada1 to ada0 mirror

POOL=$1
NEWHOSTNAME=$2
DISK=$3
DISKTWO=$4
STEP=$5

if [ "x" = "x$POOL" ]; then
    cat <<EOF
Usage:
    $0 pool newhostname ada0 ada1
EOF
    exit 1
fi



if [ "x" = "x$STEP" ]; then
    glabel status | grep ${DISK}p | awk '{print $1,$3}' \
    | while read line ; do
        test -e /dev/${line}.eli && zpool detach $POOL ${line}.eli >/dev/null 2>&1 && geli detach ${line}.eli >/dev/null 2>&1
        test -e /dev/${line}.eli && zpool detach tank ${line}.eli  >/dev/null 2>&1 && geli detach ${line}.eli >/dev/null 2>&1
        test -e /dev/${line}.eli && zpool detach vault ${line}.eli >/dev/null 2>&1 && geli detach ${line}.eli >/dev/null 2>&1
        test -e /dev/${line}.eli && swapoff /dev/${line}.eli >/dev/null 2>&1
        test -e /dev/${line}     && zpool detach boot$POOL ${line} >/dev/null 2>&1
        test -e /dev/${line}     && zpool detach $POOL ${line} >/dev/null 2>&1
        test -e /dev/${line}     && zpool detach tank ${line}  >/dev/null 2>&1
        test -e /dev/${line}     && zpool detach vault ${line} >/dev/null 2>&1
        test -e /dev/${line}     && swapoff /dev/${line} >/dev/null 2>&1
    done
    gpart destroy -F ${DISK}
    if [ "pool" = "$POOL" ]; then
        fzg -d ${DISK} -z 5g -n -H usb.local -p usb
    elif [ "usb" = "$POOL" ]; then
        fzg -d ${DISK} -z 5g -n -H $NEWHOSTNAME
    fi
    copy-network-conf-to-mnt
    cat <<EOF
Please reboot then run:
    $0 - - ${DISK} ${DISKTWO} 2
EOF
elif [ "x2" = "x$STEP" ]; then
    gpart destroy -F ${DISKTWO}
    if zpool status usb >/dev/null 2>/dev/null ; then
        fzg -e ${DISK} -z 5g -d ${DISKTWO} -p usb
    elif zpool status pool >/dev/null 2>/dev/null ; then
        fzg -e ${DISK} -z 5g -d ${DISKTWO} -p pool
    fi
    fzg-fstab-swapon-p3 ${DISKTWO}
    if [ ! -e ~/local/cshvars ] && [ -e ~/perm/cshvars ]; then
        install -m 600 ~/perm/cshvars ~/local/cshvars
        vi ~/local/cshvars
    fi
    cat <<EOF
A reminder to run these commands to setup tank/iocage:
    fzg-random-key
    fzg -i -z 922 -p tank -r mirror -d ada0 -d ada1 -d ada2
        fzg-unlock-on-boot
    or
        fzg-no-geli tank
    sortconf -f
    vi /boot/loader.conf.local
    ioc-setup
EOF
fi
